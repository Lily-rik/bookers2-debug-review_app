<% book.book_comments.each do |book_comment| %>
  <p>
    <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
    <%= book_comment.comment %>
    <% if book_comment.user == current_user %>
      <td><%= link_to 'Destroy', book_book_comments_path(book_comment.book, book_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
    <% end %>
  </p>
  <%= link_to book_comment.user.name, user_path(book_comment.user) %>
<% end %>
